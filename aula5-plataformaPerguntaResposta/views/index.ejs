<body>
  <%- include('partials/navbar') %> 
    <div class="container">
      <h1>Perguntas</h1>
      <a href="/perguntar" class="btn btn-primary mb-3">Perguntar</a>
      <% perguntas.forEach(pergunta => { %>
        <div class="card mb-3">
            <div class="card-body">
              <p><%=pergunta.titulo%></p> 
            </div>
            <div class="card-footer">
             <a href="/pergunta/<%= pergunta.id %> "><button class="btn btn-primary">Ver pergunta</button></a> 
            </div>
        </div>   
      <% }) %> 
    </div>
</body>
