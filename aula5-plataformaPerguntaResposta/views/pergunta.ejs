<%- include('partials/header') %> 
<body>
  <%- include('partials/navbar') %> 
    <div class="container">
      
        <div class="card mt-3">
            <div class="card-header">
              <h1><%= pergunta.titulo %> </h1> 
              <p><%= pergunta.descricao %> </p>
            </div>
            <div class="card-body">
              <form method="POST" action="/responder">
                <h3>Responda</h3>
                <label>Resposta:</label>
                <textarea name="corpo" placeholder="Digite sua resposta" class="form-control"></textarea><br>
                <input  name="pergunta" value="<%= pergunta.id %> " type="hidden">
                <button type="submit" class="btn btn-primary">Responder</button>
              </form>
              
            </div>
        </div>   
              <hr>
              <h3>Respostas</h3>
              <hr>
              <% respostas.forEach(resposta => { %>
                <div class="card mb-2">
                  <div class="card-body">
                    <p> <%= resposta.corpo %> </p>
                  </div>
                </div>
              <% }) %> 
        
    </div>
</body>
  <%- include('partials/footer') %> 