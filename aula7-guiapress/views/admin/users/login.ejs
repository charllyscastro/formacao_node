<%- include('../../partials/header') %> 

<div class="container">
  <div class="card mt-3">
    <div class="card-header">
      <h2>Login de admin</h2>
    </div>
    <div class="card-body">
      <div class="form">
        <form action="/authenticate" method="POST">
          <label>Email</label>
          <input name="email" type="email" class="form-control mb-3" placeholder="email@email.com">
          <label>Senha</label>
          <input name="password" type="password" class="form-control mb-3" placeholder="*****">
          <button class="btn btn-success btn-block" type="submit">Logar</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../../partials/footer') %> 

