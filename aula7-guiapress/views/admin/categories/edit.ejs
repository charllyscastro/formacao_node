<%- include('../../partials/header') %> 
<%- include('../../partials/navbar') %> 

    <div class="container">
      <div class="card mt-4" >
        <div class="card-header">
          <h2>Editar categoria</h2>
        </div>
        <div class="card-body">
          <form method="POST" action="/categories/update" onsubmit="confirmUpdate(event, this)">
            <input value="<%= category.title %> " class="form-control mb-4" type="text" name="title" placeholder="Defina o tÃ­tulo da categoria">
            <input type="hidden" name="id" value="<%= category.id %> ">
            <button class="btn btn-success">Atualizar</button>
          </form>
        </div>
      </div>
    </div>

<%- include('../../partials/footer') %>

<script>
  function confirmUpdate(event, form){
    event.preventDefault();
    const decision = confirm('Deseja atualizar a categoria?');
    if(decision){
      form.submit();
    }
  }
</script>