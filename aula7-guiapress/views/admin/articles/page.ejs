<%- include('../../partials/header') %> 
  <body>
<%- include('../../partials/homenavbar') %> 
    
    <div class="container">
      
      <% result.articles.rows.forEach((article, index) => { %>
        <div class="card mb-3 mt-3">
          <div class="card-header">
            <h2><%= article.title %> </h2>
          </div>
          <div class="card-body">
            <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
          </div>
        </div>
      <% }) %>  

      <div class="row">
        <div class=" col col-6 " >
          <% if(result.page >= 2){ %>
            <% if(result.page == 2) { %>
              <a href="/" style="float: left;"><<< Previews</a>
            <% }else { %>
              <a href="/articles/page/<%= result.page - 1 %>" style="float: left;"><<< Previews</a>
            <% } %> 
          <% } %> 
        </div>
        <div class=" col col-6 " >
          <% if(result.next){ %>
            <a href="/articles/page/<%= result.page + 1 %>" style="float: right;">Next >>></a>
          <% } %> 
        </div>
      </div>

    </div>
  </body>
<%- include('../../partials/footer') %> 